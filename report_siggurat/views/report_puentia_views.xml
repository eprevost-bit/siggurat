<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="report_puentia.report_saleorder_standalone">
            <t t-call="web.html_container">
<!--                <t t-call="web.report_assets_pdf"/>-->
                <t t-foreach="docs" t-as="doc">
                    <t t-set="company" t-value="doc.company_id"/>

                    <div class="article" style="font-family: 'Times New Roman', Times, serif; padding: 0; margin: 0;">

                        <div class="header" style="padding: 35px 35px 0 35px; width: 100%;">
                            <div class="d-flex justify-content-end align-items-center mb-2" style="margin-top: 20px">
                                <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" style="max-width: 250px;" alt="Logo"/>
                            </div>
                        </div>

                        <div class="page" style="padding: 0 35px 0 35px; top:0px">
                            <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)"/>
                            <t t-set="forced_vat" t-value="doc.fiscal_position_id.foreign_vat"/>
                            <t t-set="is_proforma" t-value="env.context.get('proforma', False) or is_pro_forma"/>

                            <h2 style="font-family: 'Times New Roman', Times, serif; font-size: 50px; color: #ff2100; margin-bottom: 10px;">
                                <span>Presupuesto</span>
                            </h2>
                            <div style="font-size: 1.0em;     margin-left: 35px;">
                                <strong>Fecha de presupuesto:</strong>
                                <span t-field="doc.date_order" t-options="{&quot;widget&quot;: &quot;date&quot;}"/>
                            </div>
                            <div style="font-size: 1.0em;     margin-left: 35px;">
                                <strong>Número de presupuesto:</strong>
                                <span t-field="doc.name"/>
                            </div>

                            <div class="row mb-4" style="border-bottom: 1px solid #ddd; margin-top: 15px">
                                <div class="col-6">
                                    <h3 style="font-family: 'Times New Roman', Times, serif; color: #ff2100; font-size: 30px;">
                                        Puentia Comunicación S.L
                                    </h3>
                                </div>
                                <div class="col-6">
                                    <h3 style="font-family: 'Times New Roman', Times, serif; color: #ff2100; font-size: 30px;">
                                        Nombre del cliente
                                    </h3>
                                </div>
                            </div>

                            <div class="row mb-4" id="informations">
                                <div class="col-6" style="padding-left: 35px;">
                                    <div style="font-size: 15px;" t-field="doc.company_id.partner_id"
                                         t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;], &quot;no_marker&quot;: True, &quot;no_label&quot;: True}"/>
                                </div>
                                <div class="col-6">
                                    <span style="font-size: 15px;"><strong>CIF:</strong></span>
                                    <span style="font-size: 15px; margin-left: 5px;" t-field="doc.partner_id.vat"/>
                                    <br/>
                                    <span style="font-size: 15px;"><strong>Dirección:</strong></span>
                                    <div style="font-size: 15px;" t-field="doc.partner_id"
                                         t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;], &quot;no_marker&quot;: True, &quot;no_label&quot;: True}"/>
                                </div>
                            </div>

                            <div class="row mt-4 mb-4">
                                <div class="col-12" style="margin-left: 25px;">
                                    <span style="font-family: 'Times New Roman', Times, serif; color: #ff2100; font-size: 25px; border-bottom: 1px solid #ff2100;">
                                        Proyecto:</span>
                                    <t t-if="doc.origin">
                                        <span style="font-family: auto; font-size: 20px; color: #ff2100;" t-field="doc.origin"/>
                                    </t>
                                </div>
                            </div>

                            <table class="o_has_total_table table o_main_table table-borderless">
                                <thead style="background-color: #eeeeee; color: #ff2100; font-family: 'Times New Roman', Times, serif; font-size: 1.2em; border-bottom: none;">
                                    <tr style="border: none;">
                                        <th name="th_description" class="text-left" style="border: none; padding: 10px; color: #ff2100;">
                                            <span>Descripción</span>
                                        </th>
                                        <th name="th_quantity" class="text-right" style="border: none; padding: 10px; color: #ff2100;">
                                            <span>Unidades</span>
                                        </th>
                                        <th name="th_priceunit" class="text-right" style="border: none; padding: 10px; color: #ff2100;">
                                            <span>Precio Ud. (€)</span>
                                        </th>
                                        <th name="th_subtotal" class="text-right" style="border: none; padding: 10px; color: #ff2100;">
                                            <span>Precio (€)</span>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody class="sale_tbody">
                                    <t t-set="lines_to_report" t-value="doc._get_order_lines_to_report()"/>
                                    <t t-set="current_subtotal" t-value="0"/>
                                    <t t-foreach="lines_to_report" t-as="line">
                                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal"/>
                                        <tr t-att-class="'fw-bold o_line_section' if (line.display_type == 'line_section' or line.product_type == 'combo') else 'fst-italic o_line_note' if line.display_type == 'line_note' else ''"
                                            t-att-style="'border-bottom: 1.5px solid #ff2100;' if not line.display_type else ''">

                                            <t t-if="not line.display_type and line.product_type != 'combo'">
                                                <td name="td_name" style="border: none; border-right: 1px solid #ddd; padding: 5px;">
                                                    <span t-field="line.name"/>
                                                </td>
                                                <td name="td_quantity" class="text-center" style="border: none; border-right: 1px solid #ddd; padding: 5px;">
                                                    <span t-field="line.product_uom_qty"/>
                                                </td>
                                                <td name="td_priceunit" class="text-center" style="border: none; border-right: 1px solid #ddd; padding: 5px;">
                                                    <span t-field="line.price_unit" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.currency_id}"/>
                                                </td>
                                                <td name="td_subtotal" class="text-center" style="border: none; padding: 5px;">
                                                    <span t-field="line.price_subtotal" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.currency_id}"/>
                                                </td>
                                            </t>
                                            <t t-elif="line.display_type == 'line_section' or line.product_type == 'combo'">
                                                <td name="td_section_line" colspan="4" style="border-bottom: 1px solid #ff2100;">
                                                    <span t-field="line.name"/>
                                                </td>
                                                <t t-set="current_section" t-value="line"/>
                                                <t t-set="current_subtotal" t-value="0"/>
                                            </t>
                                            <t t-elif="line.display_type == 'line_note'">
                                                <td name="td_note_line" colspan="4" class="fst-italic" style="border-bottom: 1px solid #ff2100; padding: 5px;">
                                                    <span t-field="line.name"/>
                                                </td>
                                            </t>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>

                            <div class="clearfix" name="so_total_summary">
                                <div id="total" class="row mt-n3" name="total">
                                    <div t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-6'} ms-auto">
                                        <table class="o_total_table table table-borderless" style="border-top: none">
                                            <t t-call="report_puentia.document_tax_totals_standalone">
                                                <t t-set="tax_totals" t-value="doc.tax_totals"/>
                                                <t t-set="currency" t-value="doc.currency_id"/>
                                            </t>
                                        </table>
                                    </div>
                                </div>
                            </div>

                            <div class="row mt-5">
                                <div class="col-12">
                                    <h3 style="font-family: 'Times New Roman', Times, serif; color: #ff2100; font-size: 30px; margin-bottom: 15px;">
                                        Comentarios</h3>
                                    <div t-if="doc.note" style="background-color: #eeeeee; padding: 20px; min-height: 50px; border-radius: 5px;">
                                        <p t-field="doc.note" style="margin: 0;"/>
                                    </div>
                                    <div t-else="" style="background-color: #eeeeee; padding: 20px; min-height: 100px; border-radius: 5px;">
                                        <p style="margin: 0; color: #888;">No hay comentarios adicionales.</p>
                                    </div>
                                </div>
                            </div>
                        </div> <div class="footer" style="padding: 0 35px 35px 35px; width: 100%; border-top: 1px solid #ddd; margin-top: 20px; padding-top: 10px;">
                            <div class="o_footer_content d-flex">
                                <div class="col-8">
                                    <p style="font-size: 0.9em; line-height: 1.4;">
                                        Inscrita en el R.M. de Madrid, al tomo 40253, folio 140, hoja 715176.<br/>
                                        Número de cuenta: ES86 0128 0200 9001 0014 2207
                                    </p>
                                </div>
                                <div class="col-4 text-end">
                                    <h3 style="font-family: 'Times New Roman', Times, serif; color: #ff2100; font-size: 40px; margin-top: 0;">Gracias</h3>
                                </div>
                            </div>
                            <div class="text-muted text-center">
                                Página <span class="page"/> / <span class="topage"/>
                            </div>
                        </div>

                    </div> </t>
            </t>
        </template>

        <template id="report_puentia.document_tax_totals_standalone">
            <t t-set="same_tax_base" t-value="tax_totals['same_tax_base']"/>
            <t t-foreach="tax_totals['subtotals']" t-as="subtotal">
                <tr class="o_subtotal" style="border-top: none">
                    <td style="border: none; border-right: 1px solid #ddd;" class="text-end">
                        <span style="color: #ff2100; font-family: 'Times New Roman', Times, serif;">IMPORTE TOTAL</span>
                    </td>
                    <td class="text-end">
                        <span t-att-class="oe_subtotal_footer_separator" t-out="subtotal['base_amount_currency']"
                              t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: currency}"/>
                    </td>
                </tr>
                <t t-foreach="subtotal['tax_groups']" t-as="tax_group">
                    <tr class="o_taxes">
                        <t t-if="same_tax_base or tax_group['display_base_amount_currency'] is None">
                            <td style="max-width: 200px; border: none; border-right: 1px solid #ddd;"
                                class="text-end">
                                <span style="color: #ff2100; font-family: 'Times New Roman', Times, serif;border: none;">
                                    21% IVA: IMPORTE A PAGAR</span>
                            </td>
                            <td class="text-end o_price_total">
                                <strong>
                                    <span class="text-nowrap" t-out="tax_group['tax_amount_currency']"
                                          t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: currency}"/>
                                </strong>
                            </td>
                        </t>
                        <t t-else="">
                            <td style="border: none; border-right: 1px solid #ddd;" class="text-end">
                                <span style="color: #ff2100; font-family: 'Times New Roman', Times, serif; border-bottom: none;">
                                    21% IVA: IMPORTE A PAGAR</span>
                            </td>
                            <td class="text-end o_price_total">
                                <strong>
                                    <span class="text-nowrap" t-out="tax_group['tax_amount_currency']"
                                          t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: currency}"/>
                                </strong>
                            </td>
                        </t>
                    </tr>
                </t>
            </t>
            <tr class="o_total" style="border-top: none">
                <td style="border: none; border-right: 1px solid #ddd;" class="text-end">
                    <strong style="color: #ff2100; font-family: 'Times New Roman', Times, serif;">TOTAL</strong>
                </td>
                <td class="text-end">
                    <strong t-out="tax_totals['total_amount_currency']"
                            t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: currency}"
                            style="color: #ff2100; font-family: 'Times New Roman', Times, serif;"/>
                </td>
            </tr>
        </template>
    </data>
</odoo>