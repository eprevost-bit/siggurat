<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_puentia.report_invoice_standalone">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-set="company" t-value="doc.company_id"/>

                    <div class="article" style="font-family: 'Times New Roman', Times, serif; padding: 0; margin: 0;">

                        <div class="header"
                             style="padding: 35px 35px 0px 35px; width: 100%; border-bottom: 2px solid #ff2100;">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <div class="col-6">
                                    <img t-if="company.logo" t-att-src="image_data_uri(company.logo)"
                                         style="max-width: 250px;" alt="Logo"/>
                                </div>
                                <div class="col-6 text-end">
                                    <h2 style="font-family: 'Times New Roman', Times, serif; font-size: 40px; color: #ff2100; margin: 0;">
                                        FACTURA_<t t-out="doc.name"/>
                                    </h2>
                                </div>
                            </div>
                        </div>
                        <div class="page" style="padding: 0px 35px 0px 35px; top:0px">
                            <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)"/>
                            <t t-set="forced_vat" t-value="doc.fiscal_position_id.foreign_vat"/>

                            <div class="row mb-4"
                                 style="margin-left: 35px; font-size: 15px;">

                                <div class="col-7">
                                    <div class="row">
                                        <div class="col-3" style="color: #888888; font-weight: normal;">Client:</div>
                                        <div class="col-9" style="font-weight: bold;">
                                            <span t-field="doc.partner_id.name"/>
                                        </div>
                                    </div>
                                    <div class="row mt-2">
                                        <div class="col-3" style="color: #888888; font-weight: normal;">Address:</div>
                                        <div class="col-9" style="font-weight: bold; line-height: 1.4;">
                                            <div t-field="doc.partner_id"
                                                 t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;], &quot;no_marker&quot;: True, &quot;no_label&quot;: True}"/>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-5">
                                    <div class="row">
                                        <div class="col-6 text-end" style="color: #888888; font-weight: normal;">
                                            ID:</div>
                                        <div class="col-6" style="font-weight: bold; margin-left: 35px;">
                                            <span t-field="doc.id"/>
                                        </div>
                                    </div>
                                    <div class="row mt-2">
                                        <div class="col-6 text-end" style="color: #888888; font-weight: normal;">INVOICE
                                            NUMBER:</div>
                                        <div class="col-6" style="font-weight: bold; margin-left: 35px;">
                                            <span t-field="doc.name"/>
                                        </div>
                                    </div>
                                    <div class="row mt-2">
                                        <div class="col-6 text-end" style="color: #888888; font-weight: normal;">
                                            DATE:</div>
                                        <div class="col-6" style="font-weight: bold; margin-left: 35px;">
                                            <span t-field="doc.invoice_date"
                                                  t-options="{&quot;widget&quot;: &quot;date&quot;, &quot;format&quot;: &quot;dd/MM/yyyy&quot;}"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <table class="o_has_total_table table o_main_table table-borderless" style="font-size: 15px;"
                                   name="invoice_line_table">
                                <thead>
                                    <tr style="border-bottom: 1px solid #ff2100;">
                                        <th name="th_description" class="text-start"><span>Description</span></th>
                                        <th name="th_quantity" class="text-end"><span>Quantity</span></th>
                                        <th name="th_subtotal" class="text-end">
                                            <span>Amount</span>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody class="invoice_tbody">
                                    <t t-set="current_subtotal" t-value="0"/>
                                    <t t-set="current_total" t-value="0"/>
                                    <t t-set="lines"
                                       t-value="doc.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>

                                    <t t-foreach="lines" t-as="line">
                                        <t t-set="current_subtotal"
                                           t-value="current_subtotal + line.price_subtotal"/>
                                        <t t-set="current_total" t-value="current_total + line.price_total"/>

                                        <tr t-att-class="'fw-bold o_line_section' if line.display_type == 'line_section' else 'fst-italic o_line_note' if line.display_type == 'line_note' else ''">
                                            <t t-if="line.display_type == 'product'"
                                               name="account_invoice_line_accountable">
                                                <td name="account_invoice_line_name">
                                                    <span t-if="line.name" t-field="line.name"
                                                          t-options="{'widget': 'text'}">Bacon Burger</span>
                                                </td>
                                                <td name="td_quantity" class="text-end text-nowrap">
                                                    <span t-field="line.quantity">3.00</span>
                                                    <span t-field="line.product_uom_id" groups="uom.group_uom">
                                                        units</span>
                                                </td>
                                                <td name="td_subtotal" class="text-end o_price_total">
                                                    <span class="text-nowrap" t-field="line.price_subtotal">
                                                        27.00</span>
                                                </td>
                                            </t>
                                            <t t-elif="line.display_type == 'line_section'">
                                                <td colspan="99">
                                                    <span t-if="line.name" t-field="line.name"
                                                          t-options="{'widget': 'text'}">A section title</span>
                                                </td>
                                                <t t-set="current_section" t-value="line"/>
                                                <t t-set="current_subtotal" t-value="0"/>
                                            </t>
                                            <t t-elif="line.display_type == 'line_note'">
                                                <td colspan="99">
                                                    <span t-if="line.name" t-field="line.name"
                                                          t-options="{'widget': 'text'}">A note, whose content
                                                        usually applies to the section or product above.</span>
                                                </td>
                                            </t>
                                        </tr>

                                        <t t-if="current_section and (line_last or lines[line_index+1].display_type == 'line_section')">
                                            <tr class="is-subtotal text-end">
                                                <td colspan="99">
                                                    <strong class="mr16">Subtotal</strong>
                                                    <span t-out="current_subtotal"
                                                          t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.currency_id}">
                                                        31.05</span>
                                                </td>
                                            </tr>
                                        </t>
                                    </t>
                                </tbody>
                            </table>
                            <div>
                                <div id="right-elements"
                                     t-attf-class="#{'col-5' if report_type != 'html' else 'col-12 col-md-5'} ms-5 d-inline-block float-end">
                                    <div id="total" class="clearfix row mt-n3">
                                        <div class="ms-auto">
                                            <table class="o_total_table table table-borderless avoid-page-break-inside">

                                                <!-- Tax totals summary (invoice currency) -->
                                                <t t-if="doc.tax_totals" t-call="account.document_tax_totals">
                                                    <t t-set="tax_totals" t-value="doc.tax_totals"/>
                                                    <t t-set="currency" t-value="doc.currency_id"/>
                                                </t>

                                                <!--Payments-->
                                                <t t-if="print_with_payments">
                                                    <t t-if="doc.payment_state != 'invoicing_legacy'">
                                                        <t t-set="payments_vals"
                                                           t-value="doc.sudo().invoice_payments_widget and doc.sudo().invoice_payments_widget['content'] or []"/>
                                                        <t t-foreach="payments_vals" t-as="payment_vals">
                                                            <tr t-if="payment_vals['is_exchange'] == 0">
                                                                <td>
                                                                    <i class="oe_form_field text-end oe_payment_label">
                                                                        Paid on <t t-out="payment_vals['date']"
                                                                                   t-options="{&quot;widget&quot;: &quot;date&quot;}">
                                                                        2021-09-19</t></i>
                                                                </td>
                                                                <td class="text-end">
                                                                    <span t-out="payment_vals['amount']"
                                                                          t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.currency_id}">
                                                                        20.00</span>
                                                                </td>
                                                            </tr>
                                                        </t>
                                                        <t t-if="len(payments_vals) &gt; 0">
                                                            <tr class="fw-bold">
                                                                <td>Amount Due</td>
                                                                <td class="text-end">
                                                                    <span t-field="doc.amount_residual">11.05</span>
                                                                </td>
                                                            </tr>
                                                        </t>
                                                    </t>
                                                </t>
                                            </table>
                                        </div>
                                    </div>
                                    <div class="mb-2">
                                        <p class="text-end lh-sm"
                                           t-if="doc.company_id.display_invoice_amount_total_words">
                                            Total amount in words: <br/>
                                            <small class="text-muted lh-sm"><span t-field="doc.amount_total_words">
                                                Thirty one dollar and Five cents</span></small>
                                        </p>
                                    </div>

                                    <!-- Tax totals summary (company currency) -->
                                    <t t-if="doc.tax_totals.get('display_in_company_currency')">
                                        <t t-set="tax_totals" t-value="doc.tax_totals"/>
                                        <t t-call="account.document_tax_totals_company_currency_template"/>
                                    </t>
                                    <t t-else="">
                                        <div class="oe_structure"/>
                                    </t>
                                </div>
                                <div id="payment_term" class="clearfix overflow-auto">
                                    <div class="justify-text">
                                        <p t-if="not is_html_empty(doc.fiscal_position_id.note)" name="note"
                                           class="mb-2">
                                            <span t-field="doc.fiscal_position_id.note"/>
                                        </p>
                                    </div>
                                    <div class="justify-text">
                                        <p t-if="not is_html_empty(doc.taxes_legal_notes)" name="taxes_legal_notes"
                                           class="mb-2">
                                            <span t-field="doc.taxes_legal_notes"/>
                                        </p>
                                    </div>
                                    <t t-set="payment_term_details" t-value="doc.payment_term_details"/>
                                    <div class="mb-3">
                                        <span id="payment_terms_note_id" t-if="doc.invoice_payment_term_id.note"
                                              t-field="doc.invoice_payment_term_id.note" name="payment_term">Payment
                                            within 30 calendar day</span><br/>
                                        <t t-if="doc.invoice_payment_term_id.display_on_invoice and payment_term_details">
                                            <div t-if="doc.show_payment_term_details"
                                                 id="total_payment_term_details_table" class="row">
                                                <div t-attf-class="#{'col-10' if report_type != 'html' else 'col-sm-10 col-md-9'}">
                                                    <t t-if="doc._is_eligible_for_early_payment_discount(doc.currency_id,doc.invoice_date)">
                                                        <td>
                                                            <span t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.currency_id}"
                                                                  t-out="doc.invoice_payment_term_id._get_amount_due_after_discount(doc.amount_total, doc.amount_tax)">
                                                                30.00</span> due if paid before
                                                            <span t-out="doc.invoice_payment_term_id._get_last_discount_date_formatted(doc.invoice_date)">
                                                                2024-01-01</span>
                                                        </td>
                                                    </t>
                                                    <t t-if="len(payment_term_details) &gt; 1"
                                                       t-foreach="payment_term_details" t-as="term">
                                                        <div>
                                                            <span t-out="term_index + 1">1</span> - Installment of
                                                            <t t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.currency_id}"
                                                               t-out="term.get('amount')" class="text-end">31.05</t>
                                                            <span> due on </span>
                                                            <t t-out="term.get('date')" class="text-start">
                                                                2024-01-01</t>
                                                        </div>
                                                    </t>
                                                </div>
                                            </div>
                                        </t>
                                    </div>
                                    <div class="mb-3"
                                         t-if="doc.move_type in ('out_invoice', 'in_refund') and doc.payment_reference">
                                        <p name="payment_communication">
                                            Payment Communication: <span class="fw-bold"
                                                                         t-field="doc.payment_reference">
                                            INV/2023/00001</span>
                                            <t t-if="doc.partner_bank_id">
                                                <br/> on this account: <span t-field="doc.partner_bank_id"
                                                                             class="fw-bold"/>
                                            </t>
                                        </p>
                                    </div>
                                    <t t-set="show_qr" t-value="doc.display_qr_code and doc.amount_residual &gt; 0"/>
                                    <div t-if="not show_qr" name="qr_code_placeholder" class="oe_structure"/>
                                    <div id="qrcode" class="d-flex mb-3 avoid-page-break-inside" t-else="">
                                        <div class="qrcode me-3" id="qrcode_image">
                                            <t t-set="qr_code_url"
                                               t-value="doc._generate_qr_code(silent_errors=True)"/>
                                            <p t-if="qr_code_url" class="position-relative mb-0">
                                                <img t-att-src="qr_code_url"/>
                                                <img src="/account/static/src/img/Odoo_logo_doc.svg"
                                                     id="qrcode_odoo_logo"
                                                     class="top-50 start-50 position-absolute bg-white border border-white border-3 rounded-circle"/>
                                            </p>
                                        </div>
                                        <div class="d-inline text-muted lh-sm fst-italic" id="qrcode_info"
                                             t-if="qr_code_url">
                                            <p>Scan this QR Code with<br/>your banking application</p>
                                        </div>
                                    </div>
                                    <!--terms and conditions-->
                                    <div class="text-muted mb-3"
                                         t-attf-style="#{'text-align:justify;text-justify:inter-word;' if doc.company_id.terms_type != 'html' else ''}"
                                         t-if="not is_html_empty(doc.narration)" name="comment">
                                        <span t-field="doc.narration"/>
                                    </div>
                                </div>
                            </div>


                        </div>
                        <div class="footer"
                             style="padding: 20px 35px 20px 35px; width: 100%; border-top: 2px solid #ff2100; margin-top: 20px; font-family: 'Times New Roman', Times, serif; color: #ff2100; font-size: 14px; font-weight: bold;">

                            <div class="row d-flex align-items-center">

                                <div class="col-2">
                                    <div style="font-size: 1.5em; margin-bottom: 5px; line-height: 1;">
                                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"
                                             style="width:20px; height:20px; fill:#ff2100; margin-right:10px; vertical-align: middle;">
