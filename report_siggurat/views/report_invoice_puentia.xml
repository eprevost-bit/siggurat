        <template id="report_puentia.document_tax_totals_invoice_standalone">

            <table class="table table-borderless"
                   style="border-bottom: 1px solid #ff2100; font-family: 'Times New Roman', Times, serif; font-size: 14px;">
                <tr style="vertical-align: top;">

                    <td style="width: 38.10%; padding: 8px;">
                        <div style="color: #ff2100; font-size: 14px; font-weight: bold; margin-bottom: 5px;">COST</div>

                        <div>
                            <span style="font-weight: bold;">Subtotal:</span>
                            <span style="font-weight: bold; margin-left: 10px;"
                                  t-out="doc.amount_untaxed_in_currency_signed"
                                  t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: currency}"/>
                        </div>
                    </td>

                    <td style="width: 30.1%; padding: 8px; border-left: 1px solid #ff2100; text-align: center;">
                        <div style="color: #ff2100; font-size: 14px; font-weight: bold; margin-top: 5px;">TOTAL<br/>
                            AMOUNT</div>
                    </td>

