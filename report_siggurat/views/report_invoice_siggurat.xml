<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_invoice_standalone">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-set="company" t-value="doc.company_id"/>

                    <div class="article" style="padding: 0; margin: 0;">

                        <div class="header" style="padding: 60px 35px 0px 35px; width: 100%;">
                            <div class="row mb-2">
                                <div class="col-6">
                                    <img t-if="company.logo" t-att-src="image_data_uri(company.logo)"
                                         style="max-width: 250px; max-height: 100px;" alt="Logo"/>
                                </div>

                                <div class="col-6 text-end"
                                     style="font-family: Arial, Helvetica, sans-serif; color: #000;">
                                    <div style="font-weight: bold; font-size: 16px; text-transform: uppercase;">
                                        <span t-field="company.name"/>
                                    </div>

                                    <div style="font-size: 14px; margin-top: 2px;">
                                        CIF: <span t-field="company.vat"/>
                                    </div>

                                    <div style="font-size: 14px;">
                                        <span t-field="company.street"/> <span t-if="company.street2"
                                                                               t-field="company.street2"/> / <span
                                            t-field="company.zip"/> <span t-field="company.city"/>
                                    </div>

                                    <div style="font-size: 14px;">
                                        <span t-field="company.phone"/> <span t-if="company.phone and company.email">
                                        /</span> <span t-field="company.email"/>
                                    </div>
                                </div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-6">
                                    <div style="margin-bottom: 10px;">
                                        <strong style="font-size: 15px;">Fecha de Factura</strong><br/>
                                        <span t-field="doc.invoice_date" t-options='{"format": "dd/MM/yyyy"}'/>
                                    </div>
                                    <div>
                                        <strong style="font-size: 15px;">Nº de Factura</strong><br/>
                                        <span t-field="doc.name"/>
                                    </div>
                                </div>

                                <div class="col-6 text-end">
                                    <div style="margin-bottom: 10px;">
                                        <strong style="font-size: 15px;">Nº de Pedido</strong><br/>
                                        <span t-field="doc.invoice_origin" t-if="doc.invoice_origin"/><span
                                            t-else="">-</span>
                                    </div>
                                    <div>
                                        <strong style="font-size: 15px;">Nº de Proveedor</strong><br/>
                                        <span t-field="doc.partner_id.ref" t-if="doc.partner_id.ref"/><span
                                            t-else="">-</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="page" style="padding: 0px 35px 0px 35px; top:10px">
                            <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)"/>
                            <t t-set="forced_vat" t-value="doc.fiscal_position_id.foreign_vat"/>

                            <div style="font-family: Arial, Helvetica, sans-serif; font-size: 14px; width: 100%;">
                                <div class="row"
                                     style="background-color:#d93025; color:white; font-weight:bold; margin-bottom:5px; padding:0 8px;">
                                           <!-- Simular las columnas de la segunda franja roja para alineación -->
                                    <!-- Concepto -->
                                    <div class="col-4" style="padding:5px 0;">
                                        ID Cliente
                                    </div>

                                    <!-- Cantidad -->
                                    <div class="col-1"></div>

                                    <!-- Tarifa -->
                                    <div class="col-1"></div>

                                    <!-- Importe -->
                                    <div class="col-2"></div>

                                    <!-- Dto -->
                                    <div class="col-1"></div>

                                    <!-- IVA -->
                                    <div class="col-1"></div>

                                    <!-- Total -->
                                    <div class="col-2 text-end" style="padding:5px 0;">
                                        NIF/CIF
                                    </div>

                                </div>


                                <div class="row">
                                    <div class="col-8">
                                        <strong style="text-transform: uppercase; font-size: 15px;"
                                                t-field="doc.partner_id.name"/><br/>
                                        <span t-field="doc.partner_id.street"/><br/>
                                        <span t-field="doc.partner_id.zip"/> <span t-field="doc.partner_id.city"/>
                                        <div t-if="doc.partner_id.country_id" t-field="doc.partner_id.country_id.name"/>
                                    </div>

                                    <div class="col-4 text-end" style="font-weight: bold;">
                                        <span t-field="doc.partner_id.vat"/>
                                    </div>
                                </div>

                            </div>
                            <table class="o_has_total_table table o_main_table table-borderless"
                                   style="font-size: 14px; font-family: Arial, Helvetica, sans-serif; width: 100%; margin-top: 20px;"
                                   name="invoice_line_table">
                                <thead>
                                    <tr style="background-color: #d93025; color: white; font-weight: bold;">
                                        <th name="th_description" class="text-start"
                                            style="padding: 8px; vertical-align: middle; border-radius: 0px; color: white; font-weight: bold;">
                                            Concepto
                                        </th>
                                        <th name="th_quantity" class="text-end"
                                            style="padding: 8px; vertical-align: middle; color: white; font-weight: bold;">
                                            Cantidad
                                        </th>
                                        <th name="th_priceunit" class="text-end"
                                            style="padding: 8px; vertical-align: middle; color: white; font-weight: bold;">
                                            Tarifa
                                        </th>
                                        <th name="th_subtotal" class="text-end"
                                            style="padding: 8px; vertical-align: middle; color: white; font-weight: bold;">
                                            Importe
                                        </th>
                                        <th name="th_discount" class="text-end"
                                            style="padding: 8px; vertical-align: middle; color: white; font-weight: bold;">
                                            Dto
                                        </th>
                                        <th name="th_taxes"
                                            class="text-center"
                                            style="padding: 4px 6px; vertical-align: middle; color: white; font-weight: bold; width: 11%;">
                                            IVA
                                        </th>


                                        <th name="th_total" class="text-end"
                                            style="padding: 8px; vertical-align: middle; border-radius: 0px; color: white; font-weight: bold;">
                                            Total
                                        </th>
                                    </tr>
                                </thead>

                                <tbody class="invoice_tbody">
                                    <t t-set="current_subtotal" t-value="0"/>
                                    <t t-set="current_total" t-value="0"/>
                                    <t t-set="lines"
                                       t-value="doc.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>

                                    <t t-foreach="lines" t-as="line">
                                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal"/>
                                        <t t-set="current_total" t-value="current_total + line.price_total"/>

                                        <tr t-att-class="'fw-bold o_line_section' if line.display_type == 'line_section' else 'fst-italic o_line_note' if line.display_type == 'line_note' else ''">
                                            <t t-if="line.display_type == 'product'"
                                               name="account_invoice_line_accountable">

                                                <td name="account_invoice_line_name">
                                                    <span t-if="line.name" t-field="line.name"
                                                          t-options="{'widget': 'text'}">Bacon Burger</span>
                                                </td>

                                                <td name="td_quantity" class="text-end">
                                                    <span t-field="line.quantity"/>
                                                </td>

                                                <td class="text-end">
                                                    <span t-field="line.price_unit"/>
                                                </td>

                                                <td name="td_subtotal" class="text-end o_price_total">
                                                    <span t-field="line.price_subtotal"
                                                          t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.currency_id}"/>
                                                </td>

                                                <td class="text-end" name="td_discount">
                                                    <span t-field="line.discount"/> <span t-if="line.discount">%</span>
                                                </td>

                                                <td class="text-center"
                                                    style="padding: 4px 6px; white-space: normal; word-break: break-word;">
                                                    <span t-out="', '.join(map(lambda x: (x.name), line.tax_ids))"/>
                                                </td>


                                                <td class="text-end">
                                                    <span t-field="line.price_total"
                                                          t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.currency_id}"/>
                                                </td>
                                            </t>

                                            <t t-elif="line.display_type == 'line_section'">
                                                <td colspan="7">
                                                    <span t-if="line.name" t-field="line.name"
                                                          t-options="{'widget': 'text'}"/>
                                                </td>
                                                <t t-set="current_section" t-value="line"/>
                                                <t t-set="current_subtotal" t-value="0"/>
                                            </t>

                                            <t t-elif="line.display_type == 'line_note'">
                                                <td colspan="7">
                                                    <span t-if="line.name" t-field="line.name"
                                                          t-options="{'widget': 'text'}"/>
                                                </td>
                                            </t>
                                        </tr>

                                        <t t-if="current_section and (line_last or lines[line_index+1].display_type == 'line_section')">
                                            <tr class="is-subtotal text-end">
                                                <td colspan="7">
                                                    <strong class="mr16">Subtotal</strong>
                                                    <span t-out="current_subtotal"
                                                          t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.currency_id}">
                                                    </span>
                                                </td>
                                            </tr>
                                        </t>
                                    </t>
                                </tbody>
                            </table>
                            <div>
                                <div style="width: 100%; border-top: 3px solid #d93025; margin: 20px 0;"></div>
                                <div id="right-elements"
                                     t-attf-class="#{'col-5' if report_type != 'html' else 'col-12 col-md-5'} ms-5 d-inline-block float-end">
                                    <div id="total" class="clearfix row mt-n3">
                                        <div class="ms-auto">
                                            <table class="o_total_table table table-borderless avoid-page-break-inside">

                                                <!-- Tax totals summary (invoice currency) -->
                                                <t t-if="doc.tax_totals" t-call="account.document_tax_totals">
                                                    <t t-set="tax_totals" t-value="doc.tax_totals"/>
                                                    <t t-set="currency" t-value="doc.currency_id"/>
                                                </t>

                                                <!--Payments-->
                                                <t t-if="print_with_payments">
                                                    <t t-if="doc.payment_state != 'invoicing_legacy'">
                                                        <t t-set="payments_vals"
                                                           t-value="doc.sudo().invoice_payments_widget and doc.sudo().invoice_payments_widget['content'] or []"/>
                                                        <t t-foreach="payments_vals" t-as="payment_vals">
                                                            <tr t-if="payment_vals['is_exchange'] == 0">
                                                                <td>
                                                                    <i class="oe_form_field text-end oe_payment_label">
                                                                        Paid on <t t-out="payment_vals['date']"
                                                                                   t-options="{&quot;widget&quot;: &quot;date&quot;}">
                                                                        2021-09-19</t></i>
                                                                </td>
                                                                <td class="text-end">
                                                                    <span t-out="payment_vals['amount']"
                                                                          t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.currency_id}">
                                                                        20.00</span>
                                                                </td>
                                                            </tr>
                                                        </t>
                                                        <t t-if="len(payments_vals) &gt; 0">
                                                            <tr class="fw-bold">
                                                                <td>Amount Due</td>
                                                                <td class="text-end">
                                                                    <span t-field="doc.amount_residual">11.05</span>
                                                                </td>
                                                            </tr>
                                                        </t>
                                                    </t>
                                                </t>
                                            </table>
                                        </div>
                                    </div>
                                    <div class="mb-2">
                                        <p class="text-end lh-sm"
                                           t-if="doc.company_id.display_invoice_amount_total_words">
                                            Total amount in words: <br/>
                                            <small class="text-muted lh-sm"><span t-field="doc.amount_total_words">
                                                Thirty one dollar and Five cents</span></small>
                                        </p>
                                    </div>

                                    <!-- Tax totals summary (company currency) -->
                                    <t t-if="doc.tax_totals.get('display_in_company_currency')">
                                        <t t-set="tax_totals" t-value="doc.tax_totals"/>
                                        <t t-call="account.document_tax_totals_company_currency_template"/>
                                    </t>
                                    <t t-else="">
                                        <div class="oe_structure"/>
                                    </t>
                                </div>
                                <div id="payment_term" class="clearfix overflow-auto">
                                    <div class="justify-text">
                                        <p t-if="not is_html_empty(doc.fiscal_position_id.note)" name="note"
                                           class="mb-2">
                                            <span t-field="doc.fiscal_position_id.note"/>
                                        </p>
                                    </div>
                                    <div class="justify-text">
                                        <p t-if="not is_html_empty(doc.taxes_legal_notes)" name="taxes_legal_notes"
                                           class="mb-2">
                                            <span t-field="doc.taxes_legal_notes"/>
                                        </p>
                                    </div>
                                    <t t-set="payment_term_details" t-value="doc.payment_term_details"/>
                                    <div class="mb-3">
                                        <span id="payment_terms_note_id" t-if="doc.invoice_payment_term_id.note"
                                              t-field="doc.invoice_payment_term_id.note" name="payment_term">Payment
                                            within 30 calendar day</span><br/>

                                        <!--Para agregar fecha de vencimiento -->
                                        <t t-if="payment_term_details">
                                            <div class="mt-2" style="font-size: 12px;">
                                                <strong>Fechas de vencimiento:</strong>
                                                <ul style="padding-left: 15px; margin-top: 5px;">
                                                    <t t-foreach="payment_term_details" t-as="term">
                                                        <li>
                                                            <span t-out="term.get('amount')"
                                                                  t-options="{'widget': 'monetary', 'display_currency': doc.currency_id}"/>
                                                            —
                                                            <span t-out="term.get('date')"/>
                                                        </li>
                                                    </t>
                                                </ul>
                                            </div>
                                        </t>

                                        <t t-if="False">
                                            <t t-if="doc.invoice_payment_term_id.display_on_invoice and payment_term_details">
                                                <div t-if="doc.show_payment_term_details"
                                                     id="total_payment_term_details_table" class="row">
                                                    <div t-attf-class="#{'col-10' if report_type != 'html' else 'col-sm-10 col-md-9'}">
                                                        <t t-if="doc._is_eligible_for_early_payment_discount(doc.currency_id,doc.invoice_date)">
                                                            <div>
                                                                <span t-options="{'widget':'monetary','display_currency':doc.currency_id}"
                                                                      t-out="doc.invoice_payment_term_id._get_amount_due_after_discount(doc.amount_total, doc.amount_tax)"/>
                                                                due if paid before
                                                                <span t-out="doc.invoice_payment_term_id._get_last_discount_date_formatted(doc.invoice_date)"/>
                                                            </div>
                                                        </t>
                                                        <t t-if="len(payment_term_details) &gt; 1"
                                                           t-foreach="payment_term_details" t-as="term">
                                                            <div>
                                                                <span t-out="term_index + 1"/> -
                                                                <t t-out="term.get('amount')"
                                                                   t-options="{'widget':'monetary','display_currency':doc.currency_id}"/>
                                                                due on
                                                                <t t-out="term.get('date')"/>
                                                            </div>
                                                        </t>
                                                    </div>
                                                </div>
                                            </t>
                                        </t>

                                    </div>

                                    <t t-set="show_qr" t-value="doc.display_qr_code and doc.amount_residual &gt; 0"/>
                                    <div t-if="not show_qr" name="qr_code_placeholder" class="oe_structure"/>
                                    <div id="qrcode" class="d-flex mb-3 avoid-page-break-inside" t-else="">
                                        <div class="qrcode me-3" id="qrcode_image">
                                            <t t-set="qr_code_url"
                                               t-value="doc._generate_qr_code(silent_errors=True)"/>
                                            <p t-if="qr_code_url" class="position-relative mb-0">
                                                <img t-att-src="qr_code_url"/>
                                                <img src="/account/static/src/img/Odoo_logo_doc.svg"
                                                     id="qrcode_odoo_logo"
                                                     class="top-50 start-50 position-absolute bg-white border border-white border-3 rounded-circle"/>
                                            </p>
                                        </div>
                                        <div class="d-inline text-muted lh-sm fst-italic" id="qrcode_info"
                                             t-if="qr_code_url">
                                            <p>Scan this QR Code with<br/>your banking application</p>
                                        </div>
                                    </div>
                                    <!--terms and conditions-->

                                </div>
                            </div>

                            <div class="text fst-italic fw-bold"
                                 style="text-align: justify; text-justify: inter-word; width: 100%; display: block; font-size: 11px; margin-top: 15px;"
                                 t-if="not is_html_empty(doc.narration)" name="comment">
                                <span t-field="doc.narration"/>
                            </div>


                        </div>
                        <div class="footer align-items-center"
                             style="padding: 60px 35px 60px 35px; width: 100%; margin-top: 20px; font-family: 'Times New Roman', Times, serif; font-size: 8px;">


                            <p style="margin-left: 50px;">ZIGGURAT LANGUAGE SERVICES, S.L. Sociedad Limitada inscrita en
                                el R.M. de Barcelona, tomo 37386, folio 139, hoja nº B297009, inscripción 1ª, CIF:
                                B63781926</p>


                            <!--                            <div class="text-center" style="margin-top: 15px; font-size: 12px; color: #888888; font-weight: normal;">-->
                            <!--                                Página <span class="page"/> / <span class="topage"/>-->
                            <!--                            </div>-->
                        </div>

                    </div></t>
            </t>
        </template>

    </data>
</odoo>