<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_copy_saleorder_standalone">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-set="company" t-value="doc.company_id"/>

                    <div class="article" style="font-family: 'Times New Roman', Times, serif; padding: 0; margin: 0;">

                        <div class="header"
                             style="padding: 35px 35px 0px 35px; width: 100%; border-bottom: 2px solid #ff2100;">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <div class="col-6">
                                    <img t-if="company.logo" t-att-src="image_data_uri(company.logo)"
                                         style="max-width: 250px;" alt="Logo"/>
                                </div>
                                <div class="col-6 text-end">
                                    <h2 style="font-family: 'Times New Roman', Times, serif; font-size: 40px; color: #ff2100; margin: 0;">
                                        PRESUPUESTO
                                    </h2>
                                </div>
                            </div>
                        </div>

                        <div class="page" style="padding: 0px 35px 0px 35px; top:0px">
                            <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)"/>

                            <div class="row mb-4"
                                 style="margin-left: 35px; font-size: 15px;">

                                <div class="col-7">
                                    <div class="row">
                                        <div class="col-3" style="color: #888888; font-weight: normal;">Client:</div>
                                        <div class="col-9" style="font-weight: bold;">
                                            <span t-field="doc.partner_id.name"/>
                                        </div>
                                    </div>
                                    <div class="row mt-2">
                                        <div class="col-3" style="color: #888888; font-weight: normal;">Address:</div>
                                        <div class="col-9" style="font-weight: bold; line-height: 1.4;">
                                            <div t-field="doc.partner_id"
                                                 t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;], &quot;no_marker&quot;: True, &quot;no_label&quot;: True}"/>
                                        </div>
                                    </div>
                                    <div class="row mt-2">
                                        <div class="col-3" style="color: #888888; font-weight: normal;">Ref.
                                            Cliente:</div>
                                        <div class="col-9" style="font-weight: bold;">
                                            <span t-field="doc.client_order_ref"/>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-5">
                                    <div class="row">
                                        <div class="col-6 text-end" style="color: #888888; font-weight: normal;">
                                            ID:</div>
                                        <div class="col-6" style="font-weight: bold; margin-left: 35px;">
                                            <span t-field="doc.partner_id.vat"/>
                                        </div>
                                    </div>
                                    <div class="row mt-2">
                                        <div class="col-6 text-end" style="color: #888888; font-weight: normal;">ORDER
                                            NUMBER:</div>
                                        <div class="col-6" style="font-weight: bold; margin-left: 35px;">
                                            <span t-field="doc.name"/>
                                        </div>
                                    </div>
                                    <div class="row mt-2">
                                        <div class="col-6 text-end" style="color: #888888; font-weight: normal;">
                                            DATE:</div>
                                        <div class="col-6" style="font-weight: bold; margin-left: 35px;">
                                            <span t-field="doc.date_order"
                                                  t-options="{&quot;widget&quot;: &quot;date&quot;, &quot;format&quot;: &quot;dd/MM/yyyy&quot;}"/>
                                        </div>
                                    </div>
                                    <div t-if="doc.validity_date" class="row mt-2">
                                        <div class="col-6 text-end" style="color: #888888; font-weight: normal;">
                                            VALID UNTIL:</div>
                                        <div class="col-6" style="font-weight: bold; margin-left: 35px;">
                                            <span t-field="doc.validity_date"
                                                  t-options="{&quot;widget&quot;: &quot;date&quot;, &quot;format&quot;: &quot;dd/MM/yyyy&quot;}"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <table class="o_main_table table table-borderless" style="font-size: 15px;"
                                   name="sale_order_line_table">
                                <thead>
                                    <tr style="border-bottom: 1px solid #ff2100;">
                                        <th name="th_description" class="text-start"><span>Description</span></th>
                                        <th name="th_quantity" class="text-end"><span>Quantity</span></th>

                                        <th name="th_discount" t-if="display_discount"
                                            t-attf-class="text-end {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                            <span>Disc.%</span>
                                        </th>

                                        <th name="th_subtotal" class="text-end">
                                            <span>Amount</span>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody class="sale_tbody">
                                    <t t-set="current_subtotal" t-value="0"/>
                                    <t t-set="current_total" t-value="0"/>
                                    <t t-set="lines"
                                       t-value="doc.order_line.filtered(lambda x: not x.display_type)"/>

                                    <t t-foreach="doc.order_line" t-as="line">
                                        <t t-set="current_subtotal"
                                           t-value="current_subtotal + line.price_subtotal"/>
                                        <t t-set="current_total" t-value="current_total + line.price_total"/>

                                        <tr t-att-class="'fw-bold o_line_section' if line.display_type == 'line_section' else 'fst-italic o_line_note' if line.display_type == 'line_note' else ''">
                                            <t t-if="not line.display_type"
                                               name="account_invoice_line_accountable">
                                                <td name="account_invoice_line_name">
                                                    <span t-if="line.name" t-field="line.name"
                                                          t-options="{'widget': 'text'}"/>
                                                </td>
                                                <td name="td_quantity" class="text-end text-nowrap">
                                                    <span t-field="line.product_uom_qty"/>
                                                    <span t-field="line.product_uom" groups="uom.group_uom"/>
                                                </td>
                                                <td name="td_subtotal" class="text-end o_price_total">
                                                    <span class="text-nowrap" t-field="line.price_subtotal"/>
                                                </td>
                                            </t>
                                            <t t-if="line.display_type == 'line_section'">
                                                <td colspan="99">
                                                    <span t-if="line.name" t-field="line.name"
                                                          t-options="{'widget': 'text'}"/>
                                                </td>
                                                <t t-set="current_section" t-value="line"/>
                                                <t t-set="current_subtotal" t-value="0"/>
                                            </t>
                                            <t t-if="line.display_type == 'line_note'">
                                                <td colspan="99">
                                                    <span t-if="line.name" t-field="line.name"
                                                          t-options="{'widget': 'text'}"/>
                                                </td>
                                            </t>
                                        </tr>

                                        <t t-if="current_section and (line_last or doc.order_line[line_index+1].display_type == 'line_section')">
                                            <tr class="is-subtotal text-end">
                                                <td colspan="99">
                                                    <strong class="mr16">Subtotal</strong>
                                                    <span t-out="current_subtotal"
                                                          t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.currency_id}"/>
                                                </td>
                                            </tr>
                                        </t>
                                    </t>
                                </tbody>
                            </table>
                            <div class="clearfix" name="so_total_summary">
                                <div id="total" class="row mt-n3" name="total">
                                    <div t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-6'} ms-auto">
                                        <table class="o_total_table table table-borderless">
                                            <!-- Tax totals -->
                                            <t t-call="sale.document_tax_totals">
                                                <t t-set="tax_totals" t-value="doc.tax_totals"/>
                                                <t t-set="currency" t-value="doc.currency_id"/></t>
                                        </table>
                                    </div>
                                </div>
                            </div>
                            <div class="oe_structure"/>
                            <div t-if="not doc.signature" class="oe_structure"/>
                            <div t-else="" class="mt-4 ml64 mr4" name="signature">
                                <div class="offset-8">
                                    <strong>Signature</strong>
                                </div>
                                <div class="offset-8">
                                    <img t-att-src="image_data_uri(doc.signature)"
                                         style="max-height: 4cm; max-width: 8cm;"/>
                                </div>
                                <div class="offset-8 text-center">
                                    <span t-field="doc.signed_by">Oscar Morgan</span>
                                </div>
                            </div>
                            <div>
                                <span t-field="doc.note"
                                      t-attf-style="#{'text-align:justify;text-justify:inter-word;' if doc.company_id.terms_type != 'html' else ''}"
                                      name="order_note"/>
                                <p t-if="not is_html_empty(doc.payment_term_id.note)">
                                    <span t-field="doc.payment_term_id.note">The payment should also be transmitted with
                                        love</span>
                                </p>
                                <div class="oe_structure"/>
                                <p t-if="doc.fiscal_position_id and not is_html_empty(doc.fiscal_position_id.sudo().note)"
                                   id="fiscal_position_remark">
                                    <strong>Fiscal Position Remark:</strong>
                                    <span t-field="doc.fiscal_position_id.sudo().note">No further requirements for this
                                        payment</span>
                                </p>
                            </div>
                            <div class="oe_structure"/>
                        </div>

                        <div class="footer"
                             style="padding: 20px 35px 20px 35px; width: 100%; border-top: 2px solid #ff2100; margin-top: 20px; font-family: 'Times New Roman', Times, serif; color: #ff2100; font-size: 14px; font-weight: bold;">

                            <div class="row d-flex align-items-center">

                                <div class="col-2">
                                    <div style="font-size: 1.5em; margin-bottom: 5px; line-height: 1;">
                                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"
                                             style="width:20px; height:20px; fill:#ff2100; margin-right:10px; vertical-align: middle;">
                                            <path d="M512 256C512 114.6 397.4 0 256 0S0 114.6 0 256C0 376 82.7 476.8 194.2 504.5V323.1H136.9V256h57.3V204.4c0-56.9 34-88 85.6-88c24.4 0 45.3 1.8 51.4 2.6v57.9h-33.8c-27.6 0-32.9 13.1-32.9 32.3V256h64.5l-8.4 67.1h-56.1V512C429.3 476.8 512 376 512 256z"/>
                                        </svg>
                                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"
                                             style="width:20px; height:20px; fill:#ff2100; margin-right:10px; vertical-align: middle;">
